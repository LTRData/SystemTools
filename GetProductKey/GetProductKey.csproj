<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net46;net6.0</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="DiscUtils.Core">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Core.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Dmg">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Dmg.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Fat">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Fat.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Iso9660">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Iso9660.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Ntfs">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Ntfs.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Registry">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Registry.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Streams">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Streams.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Udf">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Udf.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Vdi">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Vdi.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Vhd">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Vhd.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Vhdx">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Vhdx.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Vmdk">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Vmdk.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Wim">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Wim.dll</HintPath>
    </Reference>
    <Reference Include="DiscUtils.Xva">
      <HintPath>$(DiscUtilsPath)\DiscUtils.Xva.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net46'">
    <Reference Include="System.Management" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
    <PackageReference Include="System.Management">
      <Version>6.0.0</Version>
    </PackageReference>
  </ItemGroup>

</Project>
